<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Subscriptions Service -->
    <route url="/V1/paytrail/subscription/cancel/:subscription_id" method="GET">
        <service class="Paytrail\PaymentService\Api\SubscriptionManagementInterface" method="cancelSubscription" />
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/paytrail/orders/show" method="GET">
        <service class="Paytrail\PaymentService\Api\SubscriptionManagementInterface" method="showSubscriptionOrders" />
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
</routes>
